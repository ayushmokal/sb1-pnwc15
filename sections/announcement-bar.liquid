<div class="announcement-bar" role="region" aria-label="{{ 'sections.header.announcement' | t }}">
  {% if section.settings.link != blank %}
    <a href="{{ section.settings.link }}" class="announcement-bar__link">
  {% endif %}
      <p class="announcement-bar__message">
        {{ section.settings.text | escape }}
        {% if section.settings.button_label != blank %}
          <span class="announcement-bar__button">{{ section.settings.button_label | escape }}</span>
        {% endif %}
      </p>
  {% if section.settings.link != blank %}
    </a>
  {% endif %}
</div>

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "Welcome to our store",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    }
  ]
}
{% endschema %}